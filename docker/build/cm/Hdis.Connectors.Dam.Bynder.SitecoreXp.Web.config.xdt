<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <location path="sitecore">
    <system.webServer>
      <httpProtocol>
        <customHeaders>
          <add name="Content-Security-Policy" xdt:Transform="SetAttributes" xdt:Locator="Match(name)"
               value="default-src 'self' 'unsafe-inline' 'unsafe-eval' https://apps.sitecore.net; media-src 'self' data: https://brandconnect.gowlingwlg.com; img-src 'self' data: https://brandconnect.gowlingwlg.com https://s.gravatar.com https://*.wp.com/cdn.auth0.com/avatars; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' 'unsafe-inline' https://fonts.gstatic.com; block-all-mixed-content;" />
        </customHeaders>
      </httpProtocol>
    </system.webServer>
  </location>
</configuration>
